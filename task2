                document.getElementById('test').style.display="none";
                document.getElementById('t20').style.display="none";
                document.getElementById('ipl').style.display="block";
                document.getElementById('captain').style.display="none";
                document.getElementById('Odi').style.backgroundColor="black";
                document.getElementById('T20').style.backgroundColor="black";
                document.getElementById('Test').style.backgroundColor="black";
                document.getElementById('Captain').style.backgroundColor="black";
                document.getElementById('Odi').style.color="white";
                document.getElementById('T20').style.color="white";
                document.getElementById('Test').style.color="white";
                document.getElementById('Captain').style.color="white";
            }
