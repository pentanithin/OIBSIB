    <script>
        window.onload = function() {
            document.getElementById('test').style.display = "none";
            document.getElementById('t20').style.display = "none";
            document.getElementById('ipl').style.display = "none";
            document.getElementById('captain').style.display = "none";
       
        }
        function display(val){
            document.getElementById(val).style.backgroundColor="white";
            document.getElementById(val).style.color="black";
            if (val=='batting'){
                document.getElementById('ball').style.display='none';
                document.getElementById('field').style.display='none';
                document.getElementById('bat').style.display='block';
                document.getElementById('bat').classList.add('bat');
                document.getElementById('bowling').style.backgroundColor='black';
                document.getElementById('bowling').style.color='white';
                document.getElementById('bowling').style.border='2px solid #EB5B00';
                document.getElementById('fielding').style.backgroundColor='black';
                document.getElementById('fielding').style.color='white';
                document.getElementById('fielding').style.border='2px solid #EB5B00'
            }
            else if (val=='bowling'){
                document.getElementById('bat').style.display='none';
                document.getElementById('field').style.display='none';
                document.getElementById('ball').style.display='block';
                document.getElementById('ball').classList.add('ball');
                document.getElementById('batting').style.backgroundColor='black';
                document.getElementById('batting').style.color='white';
                document.getElementById('batting').style.border='2px solid #EB5B00';
                document.getElementById('fielding').style.backgroundColor='black';
                document.getElementById('fielding').style.color='white';
                document.getElementById('fielding').style.border='2px solid #EB5B00';
            }
            else{
                document.getElementById('bat').style.display='none';
                document.getElementById('ball').style.display='none';
                document.getElementById('field').style.display='block';
                document.getElementById('field').classList.add('field');
                document.getElementById('batting').style.backgroundColor='black';
                document.getElementById('batting').style.color='white';
                document.getElementById('batting').style.border='2px solid #EB5B00';
                document.getElementById('bowling').style.backgroundColor='black';
                document.getElementById('bowling').style.color='white';
                document.getElementById('bowling').style.border='2px solid #EB5B00'
            }
        }
        function record(val){
